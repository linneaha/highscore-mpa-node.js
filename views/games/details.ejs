<div class="detailsFlexbox">
  <img src="<%= game.image_url %>" alt="" width="400px" />
  <div>
    <h2><%= game.title %></h2>
    <p><%= game.release_year %>, <%= game.genre %></p>
    <p><%= game.description %></p>
  </div>
</div>

<h2>Highscores</h2>
<% game.highscores.forEach(highscore => { %>
<div class="detailsHighscores">
  <p><%= highscore.player %>, <%= highscore.date %></p>
  <p><%= highscore.points %></p>
</div>
<% }) %>
